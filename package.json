  },
  "homepage": "https://skyrim.github.io/hlviewer.js",
  "dependencies": {
    "gl-matrix": "^3.4.4",
    "nanoevents": "^9.0.0",
    "solid-js": "^1.9.11"
  },
  "devDependencies": {
    "@types/pngjs": "^6.0.5",
    "pngjs": "^7.0.0",
    "typescript": "^5.9.3",
    "vite": "^7.3.1",
    "vite-plugin-solid": "^2.11.10"
